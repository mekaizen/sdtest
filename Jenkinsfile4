pipeline {
    agent any

    environment {
        SONAR_TOKEN = credentials('SONAR_TOKEN')
        APP_IMAGE = 'doc18/sdlc-app'
        MAVEN_IMAGE = 'maven:3.8.4-openjdk-11'
        ZAP_IMAGE = 'zaproxy/zap-stable'
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the GitHub repository
                git branch: 'main', url: 'https://github.com/mekaizen/sdtest.git'
                sh 'ls -la /var/jenkins_home/workspace/sdlc-test1'

            }
        }

        stage('Set Permissions') {
            steps {
                // Set appropriate permissions for the files
                sh 'chmod -R 777 /var/jenkins_home/workspace/sdlc-test1'
            }
        }

        stage('Build and Run App') {
            steps {
                script {
                    // Display the contents of the directory to verify the POM file exists
                    sh 'ls -la'
                    // Build the app Docker image
                    sh 'docker build -t ${APP_IMAGE} .'

                    // Run the application in Docker
                    sh 'docker run --network jenkins-sonar-network -d --name app -p 8084:8084 ${APP_IMAGE}'
                }
            }
        }

        stage('Run Maven Build') {
            steps {
                script {
                    // Verify that the POM file exists in the directory
                    sh 'ls -la /var/jenkins_home/workspace/sdlc-test1'

                    // Use Maven Docker image to build the project and run tests
                    sh 'docker run --rm --network jenkins-sonar-network -v /var/jenkins_home/workspace/sdlc-test1:/usr/src/app -w /usr/src/app ${MAVEN_IMAGE} mvn clean install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // Run SonarQube analysis using Maven inside a Docker container
                    sh 'docker run --rm --network jenkins-sonar-network -v /var/jenkins_home/workspace/sdlc-test1:/usr/src/app -w /usr/src/app ${MAVEN_IMAGE} mvn sonar:sonar -Dsonar.projectKey=sdlc-app -Dsonar.sources=. -Dsonar.host.url=http://172.18.0.3:9000 -Dsonar.login=${SONAR_TOKEN}'
                }
            }
        }

        stage('ZAP Security Scan') {
            steps {
                script {
                    // Use the ZAP Docker container to run the security scan
                    sh 'docker run --rm --network jenkins-sonar-network -v /var/jenkins_home/workspace/sdlc-test1:/zap/wrk ${ZAP_IMAGE} zap-baseline.py -t http://app:8084 -r zap_report.html'
                }
            }
        }
    }

    post {
        always {
            // Cleanup: Stop and remove the app container after execution
            sh 'docker stop app || true && docker rm app || true'
            archiveArtifacts artifacts: 'zap_report.html', allowEmptyArchive: true
        }
    }
}
