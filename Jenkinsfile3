pipeline {
    agent any

    tools{
      maven 'maven'

      }

      environment {
              SONAR_TOKEN = credentials('SONAR_TOKEN')
          }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mekaizen/sdtest.git'
            }
        }

        stage('Build') {
                    steps {
                        sh 'mvn clean package'
                    }
                }
                stage('Test') {
                    steps {
                        sh 'mvn test'
                    }
                }


    }
}
